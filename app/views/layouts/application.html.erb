<!DOCTYPE html>
<html>
  <head>
    <title>Covoiturage</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <% if controller_name == 'routes' %>
     <!-- Load JS files -->

      <%= javascript_include_tag 'jquery.min' %>
      <%= javascript_include_tag 'jquery-migrate-3.0.1.min' %>
      <%= javascript_include_tag 'popper.min' %>
      <%= javascript_include_tag 'jquery.easing.1.3' %>
      <%= javascript_include_tag 'jquery.waypoints.min' %>
      <%= javascript_include_tag 'jquery.stellar.min' %>
      <%= javascript_include_tag 'owl.carousel.min' %>
      <%= javascript_include_tag 'jquery.magnific-popup.min' %>
      <%= javascript_include_tag 'bootstrap.min' %>
      <%= javascript_include_tag 'bootstrap-datepicker' %>
      <%= javascript_include_tag 'aos' %>
      <%= javascript_include_tag 'jquery.animateNumber.min' %>
      <%= javascript_include_tag 'main' %>
      <%= javascript_include_tag 'angular.min' %>
    <% end %>
  </head>

  <body>
  	<% if controller_name != 'registrations' and controller_name != 'routes' and controller_name != 'sessions' and controller_name != 'reservations' and controller_name != 'messages'  %>
  		<%#= render 'layouts/header' %>
  	<% end %>
    <%= render 'layouts/message' %>
    <%= yield %>
    <% if controller_name != 'registrations'   %>
    	<%= render 'layouts/footer' %>
    <% end %>
  </body>
</html>
