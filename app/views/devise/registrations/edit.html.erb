



    <div class="site-section block-13 bg-light">
      <div class="container">
         <div class="row mb-5">
            <div class="col-md-7 section-heading">
              <span class="subheading-sm">Modification de profil</span>
            </div>
          </div>



              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>


                <div class="form-group">
                  <%= f.label :first_name %><br />
                  <%= f.text_field :first_name ,class: "form-control",id: "first_name" , placeholder: "Prénom" %>
                </div>

                <div class="form-group">
                  <%= f.label :last_name %><br />
                  <%= f.text_field :last_name ,class: "form-control",id: "last_name" , placeholder: "Nom" %>
                </div>

                <div class="form-group">
                  <%= f.label :phone_number %><br />
                  <%= f.text_field :phone_number ,class: "form-control",id: "phone" , placeholder: "Tél" %>
                </div>


                <div class="form-group">
                  <%= f.label :address %><br />
                  <%= f.text_field :address ,class: "form-control",id: "address" , placeholder: "Adresse" %>
                </div>


                <div class="form-group">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password"  ,class: "form-control",id: "pwd" , placeholder: "Mot de passe" %>
                </div>

                <div class="form-group">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password"  ,class: "form-control",id: "pwd_confirmation" , placeholder: "Confirmation du mot de passe"%>
                </div>

                <div class="form-group">
                  <%= f.label :current_password %><br />
                  <%= f.password_field :current_password, autocomplete: "new-password"  ,class: "form-control",id: "current_pws" , placeholder: "Mot de passe actuel"%>
                </div>

                <center>
                  <div class="actions">
                    <%= f.submit "Modifier" , class: "btn btn-primary" %>
                  </div>
                </center>
              <% end %>

      </div>
    </div>


