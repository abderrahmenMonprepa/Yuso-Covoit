<p id="notice"><%= notice %></p>

<h1>User Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Comment validation</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_comments.each do |user_comment| %>
      <tr>
        <td><%= user_comment.content %></td>
        <td><%= user_comment.comment_validation %></td>
        <td><%= user_comment.user %></td>
        <td><%= link_to 'Show', user_comment %></td>
        <td><%= link_to 'Edit', edit_user_comment_path(user_comment) %></td>
        <td><%= link_to 'Destroy', user_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Comment', new_user_comment_path %>
